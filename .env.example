# ==============================================
# VIZINHO VIRTUAL - CONFIGURAÇÕES AMBIENTE
# ==============================================

# Ambiente
NODE_ENV=development
PORT=3000

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
DATABASE_URL=postgresql://vizinho_admin:VizinhoSecure2024!@localhost:5432/vizinho_virtual
DB_HOST=localhost
DB_PORT=5432
DB_NAME=vizinho_virtual
DB_USER=vizinho_admin
DB_PASSWORD=VizinhoSecure2024!

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# ==============================================
# SECURITY & AUTHENTICATION
# ==============================================
JWT_SECRET=VizinhoJWTSecret2024SuperSecure!
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=VizinhoEncryption2024Key32Chars!

# ==============================================
# PAYMENT GATEWAYS
# ==============================================

# Portugal - Multibanco/MB Way
MULTIBANCO_API_KEY=your_multibanco_api_key
MULTIBANCO_SECRET=your_multibanco_secret
MBWAY_API_KEY=your_mbway_api_key

# International - Stripe
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Brasil - PIX/Boleto
PIX_API_KEY=your_pix_api_key
BOLETO_API_KEY=your_boleto_api_key

# ==============================================
# COMMUNICATION SERVICES
# ==============================================

# Email - SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
FROM_EMAIL=noreply@vizinhovirtual.com
FROM_NAME=Vizinho Virtual

# SMS - Twilio
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+351123456789

# Push Notifications - Firebase
FIREBASE_PROJECT_ID=vizinho-virtual
FIREBASE_PRIVATE_KEY=your_firebase_private_key
FIREBASE_CLIENT_EMAIL=your_firebase_client_email

# WhatsApp Business API
WHATSAPP_API_KEY=your_whatsapp_api_key
WHATSAPP_PHONE_NUMBER=+351987654321

# ==============================================
# FILE STORAGE
# ==============================================

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-west-1
AWS_S3_BUCKET=vizinho-virtual-files

# Cloudinary (Alternative)
CLOUDINARY_CLOUD_NAME=your_cloudinary_name
CLOUDINARY_API_KEY=your_cloudinary_key
CLOUDINARY_API_SECRET=your_cloudinary_secret

# ==============================================
# EXTERNAL APIS
# ==============================================

# Google Maps
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# Emergency Services APIs
EMERGENCY_API_PORTUGAL=your_portugal_emergency_api
EMERGENCY_API_BRASIL=your_brasil_emergency_api

# ==============================================
# MONITORING & LOGGING
# ==============================================

# Sentry (Error Tracking)
SENTRY_DSN=your_sentry_dsn

# LogRocket (Session Recording)
LOGROCKET_APP_ID=your_logrocket_app_id

# ==============================================
# DEVELOPMENT TOOLS
# ==============================================

# Debug
DEBUG=vizinho:*
LOG_LEVEL=debug

# Hot Reload
CHOKIDAR_USEPOLLING=true

# ==============================================
# PRODUCTION OVERRIDES
# ==============================================

# SSL
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# CORS
CORS_ORIGIN=https://app.vizinhovirtual.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# COMPLIANCE & LEGAL
# ==============================================

# GDPR
GDPR_COMPLIANCE=true
DATA_RETENTION_DAYS=2555  # 7 anos conforme lei portuguesa

# Audit Logs
AUDIT_LOG_RETENTION_DAYS=3650  # 10 anos

# ==============================================
# BUSINESS CONFIGURATION
# ==============================================

# Subscription Plans
BASIC_PLAN_PRICE_EUR=29
PROFESSIONAL_PLAN_PRICE_EUR=59
ENTERPRISE_PLAN_PRICE_EUR=99

# Commission Rates
MARKETPLACE_COMMISSION_RATE=0.02  # 2%
PROFESSIONAL_COMMISSION_RATE=0.075  # 7.5%

# Limits
MAX_APARTMENTS_BASIC=20
MAX_APARTMENTS_PROFESSIONAL=50
MAX_APARTMENTS_ENTERPRISE=999999

# ==============================================
# FEATURE FLAGS
# ==============================================
FEATURE_MARKETPLACE=true
FEATURE_ASSEMBLIES=true
FEATURE_PROFESSIONALS=true
FEATURE_EMERGENCY=true
FEATURE_MOBILE_APP=false  # Fase 3

# ==============================================
# LOCALIZATION
# ==============================================
DEFAULT_LANGUAGE=pt
SUPPORTED_LANGUAGES=pt,en,es,fr
DEFAULT_CURRENCY=EUR
DEFAULT_TIMEZONE=Europe/Lisbon

# ==============================================
# BACKUP & DISASTER RECOVERY
# ==============================================
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=vizinho-virtual-backups