{
  "name": "vizinho-virtual-backend",
  "version": "1.0.0",
  "description": "Backend microsservi√ßos para Vizinho Virtual SaaS",
  "main": "index.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:gateway\" \"npm run dev:user\" \"npm run dev:building\" \"npm run dev:financial\" \"npm run dev:communication\"",
    "dev:gateway": "cd api-gateway && npm run dev",
    "dev:user": "cd services/user-management && npm run dev",
    "dev:building": "cd services/building-management && npm run dev",
    "dev:financial": "cd services/financial && npm run dev",
    "dev:communication": "cd services/communication && npm run dev",
    "dev:assembly": "cd services/assembly && npm run dev",
    "dev:marketplace": "cd services/marketplace && npm run dev",
    "dev:professional": "cd services/professional && npm run dev",
    "dev:security": "cd services/security && npm run dev",
    "build": "npm run build:gateway && npm run build:services",
    "build:gateway": "cd api-gateway && npm run build",
    "build:services": "cd services && npm run build:all",
    "test": "jest --coverage",
    "test:integration": "jest --config=jest.integration.config.js",
    "test:e2e": "jest --config=jest.e2e.config.js",
    "migrate": "npm run migrate:user && npm run migrate:building && npm run migrate:financial",
    "migrate:user": "cd services/user-management && npm run migrate",
    "migrate:building": "cd services/building-management && npm run migrate",
    "migrate:financial": "cd services/financial && npm run migrate",
    "seed": "npm run seed:user && npm run seed:building && npm run seed:financial",
    "seed:user": "cd services/user-management && npm run seed",
    "seed:building": "cd services/building-management && npm run seed",
    "seed:financial": "cd services/financial && npm run seed",
    "lint": "eslint . --ext .js,.ts",
    "lint:fix": "eslint . --ext .js,.ts --fix",
    "docker:build": "docker-compose build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down"
  },
  "keywords": [
    "microservices",
    "nodejs",
    "express",
    "postgresql",
    "redis",
    "jwt",
    "saas"
  ],
  "author": "Vizinho Virtual Team",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.3",
    "redis": "^4.6.12",
    "amqplib": "^0.10.3",
    "nodemailer": "^6.9.8",
    "twilio": "^4.20.0",
    "stripe": "^14.14.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.33.2",
    "winston": "^3.11.0",
    "joi": "^17.12.0",
    "moment": "^2.30.1",
    "uuid": "^9.0.1",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.11.5",
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "typescript": "^5.3.3",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "jest": "^29.7.0",
    "@types/jest": "^29.5.11",
    "supertest": "^6.3.4",
    "@types/supertest": "^6.0.2",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "prettier": "^3.2.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.3"
  }
}